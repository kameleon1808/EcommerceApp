@{
}
@model Models.Actor

<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group text-center">
        <img id="ProfilePictureURLPreview" />
    </div>
    <div class="form-group">
        <label asp-for="ProfilePictureURL">Profiler picture URL</label>
        <input asp-for="ProfilePictureURL" type="text" class="form-control" placeholder="Profiler picture URL">
        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FullName">Full Name</label>
        <input asp-for="FullName" type="text" class="form-control" placeholder="Full Name">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Bio">Bio</label>
        <input asp-for="Bio" type="text" class="form-control" placeholder="Bio">
        <span asp-validation-for="Bio" class="text-danger"></span><br></br>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a type="button" class="btn btn-primary" asp-action="Index">Show All</a>
</form>


@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePictureURLPreview');
            output.src = $('#ProfilePictureURL').val();
        })

        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePictureURLPreview');
            output.src = $(this).val();
        })
    </script>
}