@{
}

<h1>Actor Index</h1>
<a type="button" asp-action="Create" asp-controller="Actors" class="btn btn-success">Add new</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.FullName)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Bio)</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 150px"></img>
                </th>
                <td>@Html.DisplayFor(model => item.FullName)</td>
                <td>@item.Bio</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a type="button" class="btn btn-primary" asp-controller="Actors" asp-action="Edit" asp-route-id="@item.Id">Edit</a> <p> | </p>
                        <a type="button" class="btn btn-info" asp-controller="Actors" asp-action="Details" asp-route-id="@item.Id">Details</a> <p> | </p>
                        <a type="button" class="btn btn-danger" asp-controller="Actors" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


