@{
}
@model IEnumerable<Models.Cinema>

<h1>Cinemas Index</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Logo)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Description)</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 150px"></img>
                </th>
                <td>@Html.DisplayFor(model => item.Name)</td>
                <td>@item.Description</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a type="button" class="btn btn-primary">Edit</a> <p> | </p>
                        <a type="button" class="btn btn-info">Details</a> <p> | </p>
                        <a type="button" class="btn btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }


    </tbody>
</table>